# API Keys for AI Services
# Copy this file to .env and fill in your actual API keys

# Gemini API Key (Google AI)
# Get from: https://makersuite.google.com/app/apikey
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# DeepInfra API Key (for Claude)
# Get from: https://deepinfra.com/
VITE_DEEPINFRA_API_KEY=your_deepinfra_api_key_here

# Exa API Key (for web search)
# Get from: https://exa.ai/
VITE_EXA_API_KEY=your_exa_api_key_here

# Resend email (OTP auth)
# Get from: https://resend.com/api-keys
RESEND_API_KEY=your_resend_api_key_here
RESEND_FROM_EMAIL=your_verified_sender_email
RESEND_FROM_NAME=StratifyPM

# Neon Postgres (database)
# Get from: https://neon.tech
DATABASE_URL=your_neon_database_url

# Auth secret (generate a long random string)
AUTH_SECRET=your_random_auth_secret

# For testing scripts (optional)
# GEMINI_API_KEY=your_gemini_api_key_here
# CLAUDE_API_KEY=your_deepinfra_api_key_here
